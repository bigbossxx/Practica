<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>The Cube</title>
	<link rel="stylesheet" href="/static/css/bootstrap.css" media="screen" charset="utf-8">
	<script src="/static/js/jQuery.js"></script>
	<script scr="/static/js/popper.js"></script>
	<script src="/static/js/bootstrap.js""></script>
</head>
<body>
	<div class="container">

		<!--menu-->
		<div class="row">
			<nav class="navbar navbar-expand-sm navbar-light">
				<a href="/" class="navbar-brand">
					<img src="/static/img/thecube.jpg" alt="Logo" style="width: 40px;">
				</a>
				<ul class="navbar-nav">
					<li class="nav-item dropdown">
						<a href="#" class="nav-link dropdown-toggle" id="navbardrop" data-toggle="dropdown">Foros</a>
						<div class="dropdown-menu">
							<a href="#" class="dropdown-item">A</a>
							<a href="#" class="dropdown-item">B</a>
							<a href="#" class="dropdown-item">C</a>
						</div>
					</li>
				</ul>		
			</nav>
			
			<!--Login y sign up-->
			<div class="col">

				{{#if user}}
					<nav class="navbar navbar-expand-sm justify-content-end navbar-light">
						<ul class="navbar-nav">
							<li class="nav-item">
								<form method="post" action="/auth/">
									<a href="#" onclick="this.parentNode.submit()" class="nav-link">Log Out</a>
								</form>
							</li>
						</ul>
					</nav>
				{{else}}
					<nav class="navbar navbar-expand-sm navbar-light justify-content-end">
						<ul class="navbar-nav">
							<li class="nav-item">

								<!--Link abre modal al dar click-->
								<a href="#" data-toggle="modal" data-target="#loginModal" class="nav-link">Log In</a>

								<!--Efecto y caja-->
								<div class="modal fade" id="loginModal" tabindex="-1">
									<div class="modal-dialog modal-dialog-centered">
										<div class="modal-content">
											
											<!--modal Cabecera-->
											<div class="modal-header">
												<h1 class="modal-title">Log In to The Cube</h1>
												<button type="button" class="close" data-dismiss="modal" area-label="close">
													<span aria-hidden="true">&times;</span>
												</button>
											</div>

											<!--modal body-->
											<div class="modal-body">
												<form method="post"	action="/login/" id="loginForm">
													<input type="text" name="username" placeholder="User"><br>
													<input type="password" name="pwd" placeholder="Password">
												</form>												
											</div>

											<!--modal footer-->
											<div class="modal-footer">
												<button type="submit" form="loginForm">Log In</button>
											</div>
										</div>
									</div>
								</div>
							</li>
							<li class="nav-item">

								<!--open modal sign up-->
								<a href="#" class="nav-link" data-toggle="modal" data-target="#signupModal">Sign Up</a>

								<!--Caja-->	
								<div class="modal fade" id="signupModal">
										<div class="modal-dialog modal-dialog-centered">
											<div class="modal-content">
												
												<!--modal cabecera-->
												<div class="modal-header">
													<h1 class="modal-title">Create New Account in The Cube</h1>
													<button type="button" class="close" data-dismiss="modal">
														<span>&times;</span>
													</button>
												</div>

												<!--modal body-->
												<div class="modal-body">
													<form method="post" action="/userReg/" id="signupForm">
														<table class="table">
															<tr>
																<td>
																	<label>username</label>
																</td>
																<td>
																	<input type="text" name="username">
																</td>
															</tr>	
															<tr>
																<td>
																	<label>Password</label>														
																</td>
																<td>
																	<input type="password" name="pwd">
																</td>
															</tr>
															<tr>
																<td>
																	<label>Re-Type Your Password</label>
																</td>
																<td>
																	<input type="password" name="repwd">
																</td>
															</tr>
															<tr>
																<td>
																	<label>Email Address</label>
																</td>
																<td>
																	<input type="email" name="mail">
																</td>
															</tr>
															<tr>
																<td>
																	<label>Date of Birth</label>
																</td>
																<td>
																	<input type="date" name="birthdate">
																</td>
															</tr>
														</table>
													</form>
												</div>

												<!--modal footer-->
												<div class="modal-footer">
													<button type="submit" form="signupForm">Register a New Account</button>
												</div>
											</div>	
										</div>
								</div>
							</li>
						</ul>
					</nav>
				{{/if}}
			</div>
		</div>

		{{{body}}}

	</div>


</body>
</html>



